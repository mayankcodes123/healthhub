async function predict() {
    const age = document.getElementById('age').value;
    const gender = document.getElementById('gender').value;
    const symptom1 = document.getElementById('symptom1').value.toLowerCase().trim();
    
    console.log("Sending data:", { age, gender, symptom1 });

    const response = await fetch('/predict', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ age, gender, symptom1 }),
    });

    const data = await response.json();
    document.getElementById('result').innerHTML = `<p><strong>Diagnosis:</strong> ${data.diagnosis}</p>`;
}
